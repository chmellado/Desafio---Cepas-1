<p id="notice"><%= notice %></p>

<h1>Strain Wines</h1>

<label>Strain</label>
<%= form_tag strain_wines_path, method: 'get' do  %>
  <%= select_tag "strain", options_from_collection_for_select(@strain, "id", "name"), include_blank:  true %>
  <%= button_tag 'Buscar' %>
<% end %>

<label>Wine</label>
<%= form_tag strain_wines_path, method: 'get' do  %>
  <%= select_tag "wine", options_from_collection_for_select(@wines, "id", "name"), include_blank:  true %>
  <%= button_tag 'Buscar' %>

<% end %>

<br>
<table>
  <thead>
    <tr>
      <th>Wine</th>
      <th>Strain</th>
      <th>%</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @strain_wines.each do |strain_wine| %>
      <tr>
        <td><%= strain_wine.wine.name %></td>
        <td><%= strain_wine.strain.name %></td>
        <td>
          <%= form_with(model: strain_wine, local: true) do |form| %>
              <div class="field">
                <%= form.number_field :percentage %>
              </div>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', strain_wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>